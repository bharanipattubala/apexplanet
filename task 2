  <title>Task2 web developments</title>
  <style>
    /* --- Global Styles --- */
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    header, footer {
      background: #333;
      color: white;
      text-align: center;
      padding: 1rem;
    }

    main {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
      padding: 1rem;
    }

    section {
      padding: 1rem;
      border: 1px solid #ddd;
      border-radius: 8px;
    }

    
    form {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    input, textarea {
      padding: 0.5rem;
      border: 1px solid #aaa;
      border-radius: 4px;
    }

    .error {
      color: red;
      font-size: 0.9em;
    }

    button {
      padding: 0.5rem;
      background-color: #4CAF50;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    button:hover {
      background-color: #45a049;
    }

    
    ul {
      list-style: none;
      padding-left: 0;
    }

    ul li {
      padding: 0.5rem;
      margin-bottom: 0.5rem;
      background: #f2f2f2;
      border-radius: 4px;
      display: flex;
      justify-content: space-between;
    }

    
    @media (max-width: 768px) {
      main {
        grid-template-columns: 1fr;
      }
    }
